name = Theme
description = A Bootstrap Sub-theme.
core = 7.x
base theme = bootstrap


;;;;;;;;;;;;;;;;;;;;;
;; Regions
;;;;;;;;;;;;;;;;;;;;;

regions[navigation]       = 'Navigation'
regions[navigation_right] = 'Navigation right'
regions[header]           = 'Top Bar'
regions[highlighted]      = 'Highlighted'
regions[help]             = 'Help'
regions[content]          = 'Content'
regions[sidebar_first]    = 'Primary'
regions[sidebar_second]   = 'Secondary'
regions[frontpage_first]  = 'Frontpage first'
regions[frontpage_second] = 'Frontpage second'
regions[frontpage_third]  = 'Frontpage third'
regions[footer]           = 'Footer'
regions[page_top]         = 'Page top'
regions[page_bottom]      = 'Page bottom'


;;;;;;;;;;;;;;;;;;;;;
;; Stylesheets
;;;;;;;;;;;;;;;;;;;;;

stylesheets[all][] = less/style.less


;;;;;;;;;;;;;;;;;;;;;
;; Scripts
;;;;;;;;;;;;;;;;;;;;;
 
scripts[] = 'bootstrap/js/affix.js'
scripts[] = 'bootstrap/js/alert.js'
scripts[] = 'bootstrap/js/button.js'
scripts[] = 'bootstrap/js/carousel.js'
scripts[] = 'bootstrap/js/collapse.js'
scripts[] = 'bootstrap/js/dropdown.js'
scripts[] = 'bootstrap/js/modal.js'
scripts[] = 'bootstrap/js/tooltip.js'
scripts[] = 'bootstrap/js/popover.js'
scripts[] = 'bootstrap/js/scrollspy.js'
scripts[] = 'bootstrap/js/tab.js'
scripts[] = 'bootstrap/js/transition.js'

; Disable BootstrapCDN if using Bootstrap source files in your sub-theme.
settings[bootstrap_cdn] = ''


;;;;;;;;;;;;;;;;;;;;;
;; Layouts
;;;;;;;;;;;;;;;;;;;;;

; Layout: Default
layouts[default][name] = "Default"
layouts[default][description] = "Default layout."
layouts[default][template] = "page"
layouts[default][regions][] = "navigation"
layouts[default][regions][] = "navigation_right"
layouts[default][regions][] = "header"
layouts[default][regions][] = "highlighted"
layouts[default][regions][] = "help"
layouts[default][regions][] = "content"
layouts[default][regions][] = "sidebar_first"
layouts[default][regions][] = "sidebar_second"
layouts[default][regions][] = "footer"
layouts[default][regions][] = "page_top"
layouts[default][regions][] = "page_bottom"

; Layout: Frontpage
layouts[frontpage][name] = "Frontpage"
layouts[frontpage][description] = "Frontpage."
layouts[frontpage][template] = "layout-frontpage"
layouts[frontpage][regions][] = "navigation_right"
layouts[frontpage][regions][] = "navigation"
layouts[frontpage][regions][] = "header"
layouts[frontpage][regions][] = "highlighted"
layouts[frontpage][regions][] = "help"
layouts[frontpage][regions][] = "content"
layouts[frontpage][regions][] = "after_first"
layouts[frontpage][regions][] = "after_second"
layouts[frontpage][regions][] = "after_last"
layouts[frontpage][regions][] = "footer"
layouts[frontpage][regions][] = "page_top"
layouts[frontpage][regions][] = "page_bottom"
